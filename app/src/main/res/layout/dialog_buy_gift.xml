<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_margin="16dp"
        android:id="@+id/buyImg"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyText"
        android:layout_below="@+id/buyImg"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Would you like to purchase\n_____\nfor xx PandaPoints?"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyDecline"
        android:text="Cancel"
        android:layout_below="@+id/buyText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyConfirm"
        android:text="Confirm"
        android:layout_alignBaseline="@+id/buyDecline"
        android:layout_alignBottom="@+id/buyDecline"
        android:layout_toEndOf="@+id/buyText" />
</RelativeLayout>